<div class="container-full">
  <div class="login">
      {{#if showError}}
        <div class="alert alert-danger" id="error-msg">{{errorMessage}}</div>
      {{/if}}
      <div class="well">
      <form id="login-form" role="form">
        <fieldset>
          <legend>Login</legend>
          {{input type="text" class="form-control" value=username id="username"
                  placeholder="Username"}}
          {{input type="password" class="form-control" value=password id="password"
                  placeholder="Password+2FA_Token"}}
          <button type="submit" class="btn btn-primary btn-lg btn-block" {{action "login"}}>Login
          </button>
        </fieldset>
      </form>
    </div>
  </div>
</div><!-- /container -->
